{
  "name": "Scrapbox List Marker",
  "description": "__MSG_appDescription__",
  "version": "1.4.0",
  "default_locale": "en",
  "manifest_version": 3,

  "action": {
    "default_title": "Scrapbox List Marker",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://scrapbox.io/*/*"],
      "js": ["contentScripts/contentScript.js"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "images/16icon.png",
    "48": "images/48icon.png",
    "128": "images/128icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["contentScripts/contentScript.js"],
      "extension_ids": ["ijofdcbphchljfjaennedmlmjjcholig"]
    }
  ]
}
